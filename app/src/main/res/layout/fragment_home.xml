<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    android:background="#B0E3FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="60dp">

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/mainTextColor"
                        android:textSize="32dp"
                        android:textStyle="bold"
                        android:shadowColor="#40000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"/>

                    <TextView
                        android:id="@+id/tvTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="_ _"
                        android:textColor="@color/mainTextColor"
                        android:textSize="50sp"
                        android:textStyle="normal"
                        android:shadowColor="#40000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/mainTextColor"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:shadowColor="#40000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="10"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvHighestTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/mainTextColor"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:shadowColor="#40000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="10"/>

                        <TextView
                            android:id="@+id/tvLowestTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text=""
                            android:textColor="@color/mainTextColor"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:shadowColor="#40000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="10"/>
                    </LinearLayout>

                </LinearLayout>

                <!--Dự báo theo giờ-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/transparent"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_forecast_hours"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dự báo theo giờ"
                                android:textAllCaps="true"
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/forecastTitle"
                                android:textSize="14dp"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/mainTextColor"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcHourForecast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--Dự báo theo ngày-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/transparent"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_forecast_days"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dự báo 10 ngày"
                                android:textAllCaps="true"
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/forecastTitle"
                                android:textSize="14dp"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcDayForecast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:nestedScrollingEnabled="false"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--Dự báo gió và lượng mưa-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="10dp"

                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_wind"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="GIÓ"
                                    android:textAllCaps="true"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/forecastTitle"
                                    android:textSize="14dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <fpoly.nhanhhph47395.weather.subviews.WindView
                                android:id="@+id/windView"
                                android:layout_width="match_parent"
                                android:layout_height="150dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_precip"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="LƯỢNG MƯA"
                                    android:textAllCaps="true"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/forecastTitle"
                                    android:textSize="14dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:layout_marginTop="8dp">
                                    <TextView
                                        android:id="@+id/tvPrecip"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="34mm"
                                        android:textColor="@color/mainTextColor"
                                        android:textSize="20dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="trong 24 giờ qua"
                                        android:textColor="@color/mainTextColor"
                                        android:textSize="16dp"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvPrecipForecast"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Dự báo: 24mm trong 24 giờ tiếp theo"
                                    android:textColor="@color/mainTextColor"
                                    android:textSize="12dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--Dự báo uv và độ ẩm-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_uv"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="chỉ số uv"
                                    android:textAllCaps="true"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/forecastTitle"
                                    android:textSize="14dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:layout_marginTop="8dp">
                                    <TextView
                                        android:id="@+id/tvUV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:textColor="@color/mainTextColor"
                                        android:textSize="20dp"/>

                                    <TextView
                                        android:id="@+id/tvUVWarning"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Trung bình"
                                        android:textColor="@color/mainTextColor"
                                        android:textSize="16dp"
                                        android:textStyle="bold"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvUVAdvice"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Tránh nắng đến 17:00"
                                    android:textColor="@color/mainTextColor"
                                    android:textSize="12dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_humidity"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="độ ẩm"
                                    android:textAllCaps="true"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/forecastTitle"
                                    android:textSize="14dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:layout_marginTop="8dp">
                                    <TextView
                                        android:id="@+id/tvHumidity"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="72%"
                                        android:textColor="@color/mainTextColor"
                                        android:textSize="20dp"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvHumidityEvaluate"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Điểm sương là 26 ngay lúc này"
                                    android:textColor="@color/mainTextColor"
                                    android:textSize="12dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--Dự báo tầm nhìn và cảm nhận-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_vision"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="tầm nhìn"
                                    android:textAllCaps="true"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/forecastTitle"
                                    android:textSize="14dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:layout_marginTop="8dp">
                                    <TextView
                                        android:id="@+id/tvVision"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="18 km"
                                        android:textColor="@color/mainTextColor"
                                        android:textSize="20dp"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvVisionEvaluate"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Hoàn toàn rõ ngay lúc này"
                                    android:textColor="@color/mainTextColor"
                                    android:textSize="12dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_feellike"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="cảm nhận"
                                    android:textAllCaps="true"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/forecastTitle"
                                    android:textSize="14dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:orientation="vertical"
                                    android:layout_marginTop="8dp">
                                    <TextView
                                        android:id="@+id/tvFeelLike"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="33"
                                        android:textColor="@color/mainTextColor"
                                        android:textSize="20dp"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvFeelLikeAdvice"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Độ ẩm đang khiến bạn thấy ấm hơn"
                                    android:textColor="@color/mainTextColor"
                                    android:textSize="12dp"
                                    android:textStyle="normal"/>
                            </LinearLayout>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>



</FrameLayout>